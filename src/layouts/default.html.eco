<html>
<head>
	<title><%= @document.title %></title>
	<%- @getBlock("meta").toHTML() %>
	<%- @getBlock("styles").add([@document.pathToAssets+"/styles/style.css"]).toHTML() %>
</head>
<body>
	<div id="content">
		<div id="container">
			<div id="header">
				<a class="header-element" id="header-logo" href="<%= @document.pathToRoot %>/">
					<img alt="StudyMesg" src="<%= @document.pathToAssets %>/images/studymeshlogo.jpg"/>
				</a>
			</div>
			<div id="main">
				<%- @content %>
			</div>
			<div id="footer">
				<ul class="menubar">
					<li><a href="<%= @document.pathToRoot %>/about">About Us</a></li>
					<li><a href="http://blog.studymesh.com">Blog</a></li>
					<li><a href="<%= @document.pathToRoot %>/pricing">Plans &amp; Pricing</a></li>
					<li><a href="<%= @document.pathToRoot %>/legal/tos">Terms of Service</a></li>
					<li><a href="<%= @document.pathToRoot %>/legal/privacy">Privacy</a></li>
					<li><a href="<%= @document.pathToRoot %>/about/contact">Contact</a></li>
				</ul>
			</div>
		</div>
	</div>
	<%- @getBlock("scripts").toHTML() %>
</body>
</html>